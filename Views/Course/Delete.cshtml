@model WebApStudentEnrolment.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>
<h4 class="text-danger">Are you sure you want to delete this course?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Description)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Credits)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Credits)</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
