@model IEnumerable<WebApStudentEnrolment.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Course</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No courses found.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.First().Description)</th>
                <th>@Html.DisplayNameFor(m => m.First().Credits)</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Credits</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
